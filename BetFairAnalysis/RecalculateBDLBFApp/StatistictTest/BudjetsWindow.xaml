<Window x:Class="StatisticsTest.BudjetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BudjetsWindow" Height="500" ScrollViewer.VerticalScrollBarVisibility="Visible" Name="MainWind">
    <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Best Budjets"/>
                <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="True" VerticalScrollBarVisibility="Hidden" x:Name="_bestBudjetsDataGrid" MaxHeight="{Binding Height, ElementName=MainWind}"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Worst Budjets"/>
            <DataGrid ItemsSource="{Binding}"  AutoGenerateColumns="True" VerticalScrollBarVisibility="Hidden" x:Name="_worstBudjetsDataGrid" MaxHeight="{Binding Height, ElementName=MainWind}">
                </DataGrid>
            </StackPanel>
        </StackPanel>
</Window>
