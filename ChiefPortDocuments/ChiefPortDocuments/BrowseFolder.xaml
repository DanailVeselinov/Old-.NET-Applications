<Window x:Class="ChiefPortDocuments.BrowseFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BrowseFolder">
    <StackPanel Orientation="Vertical" Margin="5">
        <Label Content="Path"/>
        <StackPanel>
            <TextBox x:Name="PathTB" MinWidth="400" TextChanged="PathTB_TextChanged"></TextBox>
        </StackPanel>
        <Label Content="Content"/>
        <StackPanel Orientation="Horizontal">
            <ListView Name="ChildList" MinHeight="50" MaxHeight="200" MinWidth="500" ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDoubleClick="Select_Click" KeyUp="ChildList_KeyUp"/>
            <Button Name="UpLevel" Click="UpLevel_Click" Width="50" Margin="10" Height="Auto" Content="Up"/>
            <Button Name="Select" Content="Select" Width="100" Margin="10" Click="Select_Click_Button"/>
        </StackPanel>
    </StackPanel>
</Window>
