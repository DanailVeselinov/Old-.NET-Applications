<Application x:Class="BetFairBot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ButtonBrushImage" Color="#FFD4D0C8"/>
        <RadialGradientBrush x:Key="WindowBackground" Center="0.8,0.8" RadiusX="0.8" RadiusY="0.8" SpreadMethod="Reflect" Opacity="0.8">
            <GradientStop Color="#FFAEAAAC" Offset="1"/>
            <GradientStop Color="#FF0D2D99"/>
        </RadialGradientBrush>
        <LinearGradientBrush x:Key="TextBackground" EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Reflect">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform AngleX="21" CenterY="0.5" CenterX="0.5" AngleY="50"/>
                    <RotateTransform CenterY="0.5" CenterX="0.5" Angle="-375.945"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFE2ECEE" Offset="0.953"/>
            <GradientStop Color="#FFDCD9DA"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="TabControlBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF82838B" Offset="0"/>
            <GradientStop Color="#FFF5F0F0" Offset="1"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
