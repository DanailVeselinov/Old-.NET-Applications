<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfBNFTExtract" x:Class="WpfBNFTExtract.BunkerDialogWindow"
        Title="Select Bunker Participants" SizeToContent="WidthAndHeight" WindowStyle="None" Opacity="0.9" WindowStartupLocation="CenterScreen" Foreground="{Binding Path=Value,ElementName=ThemeSlider,Converter={StaticResource RGBConverterForeground}}" Background="{Binding Path=Value,ElementName=ThemeSlider,Converter={StaticResource RGBConverter}}" Cursor="Arrow" KeyUp="UsersGrid_KeyDown" MouseMove="MainWindow_MouseMove">

    <ScrollViewer MaxHeight="500">
        <StackPanel Orientation="Vertical">
            <Slider x:Name="ThemeSlider" Maximum="63" LargeChange="5" Margin="0,5" SmallChange="1" Width="255" Value="49" Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Click="Button_Click_OK" IsDefault="True" FontSize="25" Margin="10,2"/>
                <Button Content="Cancel" IsCancel="True" Margin="10,2" FontSize="25"/>
            </StackPanel>
            <Label Content="Select Bunker Operations Participants" FontSize="20" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BunkerDialogWindow}}}"/>
            <DataGrid x:Name="UsersGrid" ItemsSource="{DynamicResource ResourceKey=UsersList}" AutoGenerateColumns="False" Foreground="{Binding Path=Value,ElementName=ThemeSlider,Converter={StaticResource RGBConverterForeground}}" Background="{Binding Path=Value,ElementName=ThemeSlider,Converter={StaticResource RGBConverter}}" RowBackground="{Binding Path=Background, RelativeSource={RelativeSource Self}}" SelectionUnit="FullRow" SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False" >
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Select" Binding="{Binding Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>

</Window>
