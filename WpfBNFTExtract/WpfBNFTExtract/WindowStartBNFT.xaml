<Window x:Class="WpfBNFTExtract.WindowStartBNFT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start BNFT" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Foreground="{Binding Path=Value,ElementName=ThemeSlider,Converter={StaticResource RGBConverterForeground}}" Background="{Binding Path=Value,ElementName=ThemeSlider,Converter={StaticResource RGBConverter}}"  >
    <StackPanel>
        <Slider Name="ThemeSlider" Maximum="63" LargeChange="5" Margin="0,5" SmallChange="1" Width="255" Value="49" Visibility="Collapsed"/>
        <TextBlock Text="Please Start BNFT_VSL Application and Press (OK) Button in order to find the database!" MaxWidth="350" TextAlignment="Center" TextWrapping="Wrap" FontSize="20" Foreground="Red"/>
        <Button Name="OK" FontSize="30" Content="OK" Click="OK_Click"
                Height="40" Width="60"/>        
    </StackPanel>
</Window>
