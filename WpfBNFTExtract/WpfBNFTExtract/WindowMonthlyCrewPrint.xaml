<Window x:Class="WpfBNFTExtract.WindowMonthlyCrewPrint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowMonthlyCrewPrint" SizeToContent="WidthAndHeight" WindowStyle="None" AllowsTransparency="True" Opacity="0.9" WindowStartupLocation="CenterScreen" Foreground="{Binding Path=Value,ElementName=ThemeSlider,Converter={StaticResource RGBConverterForeground}}" Background="{Binding Path=Value,ElementName=ThemeSlider,Converter={StaticResource RGBConverter}}"  Loaded="Window_Loaded" Closed="Window_Closed" MouseMove="Window_MouseMove">
    <StackPanel>
        <Slider Name="ThemeSlider" Maximum="63" LargeChange="5" Margin="0,5" SmallChange="1" Width="255" Value="49" Visibility="Collapsed"/>
        <Label Name="Date" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Label Content="Select Printer"/>
        <ComboBox Name="PrinterSelector" ItemsSource="{Binding}" />
        <Label Content="Responsible Officer or Master Select"/>
        <ComboBox Name="ResponsibleCombo" ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedIndex="1"/>
        <Label Content="CrewList"/>
        <DataGrid x:Name="CREWPRINTGRID" ItemsSource="{Binding}" MaxHeight="400" AutoGenerateColumns="False" SelectionMode="Extended" SelectionUnit="CellOrRowHeader" Margin="0,0,0.4,0" ScrollViewer.CanContentScroll="True" Background="{Binding Background, ElementName=MainWindowNameName}" Foreground="{Binding Foreground, ElementName=MainWindowName}" RowBackground="{Binding Background, RelativeSource={RelativeSource Self}}" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Visibility="Hidden" Binding="{Binding ID}"/>
                <DataGridTextColumn  Header="Name" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn  Header="Rank" Binding="{Binding Rank}" Width="60"/>
                <DataGridTextColumn  Header="SignOn" Binding="{Binding EmbarkDate}" Width="60"/>
                <DataGridTextColumn  Header="SignOff" Binding="{Binding DisembarkDate}" Width="60"/>
                <DataGridTemplateColumn  Header="View" MaxWidth="30">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Vew" Click="Button_UserView_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn  Header="View" MaxWidth="30">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Print" Click="Button_UserPrint_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="PrintAll" Click="PrintAll_Click" Content="Print All" FontSize="30" Height="40"/>
        <Button Name="Exit" Content="Exit" Click="Exit_Click" FontSize="30" Height="40"/>
    </StackPanel>
</Window>
